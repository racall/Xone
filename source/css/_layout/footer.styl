footer 
  width 100%
  height 100px
  text-align center
  font-size 1.4rem
  color #666
  border-top 1px dashed #ccc
/*回到顶部*/
#backtoTop 
  z-index 5000
  background-color #eee
  border-radius 100%
  bottom 10%
  height 48px
  position fixed
  right -100px
  width 48px
  transition 0.5s
  &.button--show 
    right 10px
.per 
  font-size 16px
  height 48px
  line-height 48px
  position absolute
  text-align center
  top 0
  width 48px
  color #555
  cursor pointer
  &:before 
    font-family iconfont,fatesinger
    content attr(data-percent)
  &:hover 
    &:before 
      font-family "微软雅黑"
      content "顶"
      font-size 20px
.post-title 
  a 
    &:hover 
      color #bbb