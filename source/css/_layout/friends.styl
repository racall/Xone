.friends 
  width 400px
  height 250px
  position fixed
  right -400px
  bottom 100px
  transition all 1.5s
  z-index 9999
  .friends-box 
    width 400px
    height 250px
    background-color #f7f7f7
    border-radius 8px
  .pop-friends 
    width 32px
    height 32px
    background url('data:image/svg+xml;base64,')
    cursor pointer
    position absolute
    top 174px
    right 410px
    border-bottom none
    transition all 1.5s
.friends-box 
  a 
    height 24px
    border-color #bfbfbf
    border 1px solid rgba(255, 255, 255, 0.8)
    border-radius 4px
    padding 0 10px
    line-height 24px
    font-size 14px
    margin 0 1px
    margin-bottom 6px
    &:hover 
      border 1px solid
