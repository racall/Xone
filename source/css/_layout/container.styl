.container 
  width 100%
  main 
    max-width 75%
    margin 0 auto
    border-radius 5px
    article 
      margin-bottom 3rem
  article 
    .article-title 
      color #212121
      font-size 2.4rem
      line-height 1.3
      text-align center
      margin-top 0
      margin-bottom 1rem
    .article-time 
      color #9e9e9e
      font-size 1.3rem
      text-align center
    .article-content 
      margin 1rem 0
      font-size 1.6rem
      color #424242
article::before, article::after 
  position relative
  content ' '
  display block
  opacity 0.3
  padding 1.5rem
article 
  position relative
  &::before 
    border-top 1px solid #ccc
    background url("data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiA/PjxzdmcgaGVpZ2h0PSI0OCIgdmlld0JveD0iMCAwIDQ4IDQ4IiB3aWR0aD0iNDgiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTEyIDM0aDZsNC04di0xMmgtMTJ2MTJoNnptMTYgMGg2bDQtOHYtMTJoLTEydjEyaDZ6Ii8+PHBhdGggZD0iTTAgMGg0OHY0OGgtNDh6IiBmaWxsPSJub25lIi8+PC9zdmc+") no-repeat 0 -7px
    background-size 24px 24px
  &::after 
    border-bottom 1px solid #ccc
    background url("data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiA/PjxzdmcgaGVpZ2h0PSI0OCIgdmlld0JveD0iMCAwIDQ4IDQ4IiB3aWR0aD0iNDgiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTEyIDM0aDZsNC04di0xMmgtMTJ2MTJoNnptMTYgMGg2bDQtOHYtMTJoLTEydjEyaDZ6Ii8+PHBhdGggZD0iTTAgMGg0OHY0OGgtNDh6IiBmaWxsPSJub25lIi8+PC9zdmc+") no-repeat 100% 7px
    background-size 24px 24px
  .article-meta 
    font-size 1.4rem
  .article-footer 
    .article-meta 
      & > span 
        &:not(:last-child) 
          margin-right 1rem
main 
  .pagination 
    position relative
    margin 30px 0
    display flex
    justify-content space-around
.pagination 
  a 
    font-size 1.6rem
    border 1px solid #e0e0e0
    line-height 30px
    height 32px
    padding 0 20px
    border-radius 16px
    transition-duration 0.4s
    &:hover 
      border 1px solid
