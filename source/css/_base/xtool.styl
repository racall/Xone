/*基本默认值*/
html 
  font-size 62.5%
  color #222
/*选中文字时的样式*/
::selection 
  background #262a30
  color #fff
  text-shadow none
ul 
  margin 0
  padding 0
li 
  list-style none
/*加载动画*/
.animate-init 
  position relative
  top -10px
  opacity 0
/*工具样式*/
.center-block 
  display block
  margin-left auto
  margin-right auto
.pull-left 
  float left !important
.pull-right 
  float right !important
.text-center 
  text-align center !important
.hide 
  display none !important
.show 
  display block !important
/*隐藏元素，并不会占用当前元素的空间*/
.invisible 
  visibility hidden
.text-hide 
  font 0/0 a
  color transparent
  text-shadow none
  background-color transparent
  border 0
/*清除浮动*/
.clearfix:before,
.clearfix:after 
  content " "
  display table
.clearfix 
  &:after 
    clear both
/*自定义页面样式*/
body 
  font-size 1.2rem
  line-height 1.5
  font-family "PT Mono", "Source Code Pro", "Courier New", "PingFang SC", "Microsoft YaHei", monospace
a 
  color #666
  text-decoration none
a:hover,a:active 
  color #000
  text-decoration none
